<?xml version="1.0" encoding="UTF-8"?>
<MasterDetailPage 
    xmlns="http://xamarin.com/schemas/2014/forms" 
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml" 
    x:Class="HiddenMessage.pages.MasterMessagePage"
    Title="Messages">

    <MasterDetailPage.Master Title="x">
        <ContentPage  Title="Master">
            <ContentPage.Content>
                <StackLayout>
                    <Label Text="Messages Menu" HorizontalTextAlignment="Center" HorizontalOptions="CenterAndExpand"></Label>
                    <Button Text="View Messages" Clicked="OnClickToMessagesButton"></Button>                  
                    <Button Text="Invite Others" Clicked="OnClickToInviteButton"></Button>
                    <Button Text="Leave Conversation" Clicked="OnClickLeaveButton"></Button>
                </StackLayout>
            </ContentPage.Content>
        </ContentPage>  
    </MasterDetailPage.Master>
        
</MasterDetailPage>
